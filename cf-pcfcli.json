{
"AWSTemplateFormatVersion": "2010-09-09",
"Description": "uses vanilla Amazon Linux AMI (ami-7172b611)",

"Mappings": {
  "EC2RegionMap": {
   "us-west-2": {"craiggoami": "ami-7172b611"}
  }
},
"Resources": {
  "Server": {
   "Type": "AWS::EC2::Instance",
   "Properties": {
    "Tags" : [{
     "Key":"craig-go-component",
     "Value":"craig-go"
    }],
    "ImageId": {
     "Fn::FindInMap": [
      "EC2RegionMap", {
       "Ref": "AWS::Region"
      },
      "craiggoami"
     ]
    },
    "InstanceType": "t2.micro",
    "KeyName":  "craigradiantblueoregon" ,
    "IamInstanceProfile": "pcfcli",
    "UserData": {"Fn::Base64": {"Fn::Join": ["",
     [
"#!/bin/bash -ex\n",
"yum install git -y\n",
"sudo -u ec2-user bash -c 'cd /home/ec2-user; git clone https://github.com/craigwongva/pcfcli.git > /tmp/u01 2>&1 '\n",
"sudo -u ec2-user bash -c '/home/ec2-user/pcfcli/userdata-pcfcli > /tmp/u03 2>&1'\n"
     ]
    ]}}
   }
  }
}
}
